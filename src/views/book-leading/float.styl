.leading-book-float {
  width 10vw
  height 66px
  border-top-left-radius 30px
  border-bottom-left-radius 30px
  background-color rgba(0,0,0, .8)
  transition width linear .3s
  .history{
    bottom -100%
    opacity 0
    transition bottom linear .2s
  }
  .mask {
    opacity 0
    top 100%
    transition all linear .2s
  }
  .leading-book-item, .leading-book-more{
    display none
  }
  &.expand {
    justify-content space-between
    width 80vw
    height 100px
    border-top-left-radius 50px
    border-bottom-left-radius 50px
    .leading-book-item, .leading-book-more {
      display block
    }
  }
  .leading-book-item {
    min-width 50vw
  }
  .leading-book-more {
    color rgb(75,151,255)
    text-decoration underline
  }
  &.history {
    .history{
      bottom 0
      opacity 1
    }
    .mask {
      z-index 0
      top 0
      // opacity .6
      opacity 0.8
      width 100%
      height 100%
    }
  }
  .close-bar {
    height 88px
    line-height 88px
    text-align center
    color $theme-txt-color2
    position absolute
    bottom 0
    left 0
    width 100%
    background $theme-bg-color
  }
  .am-list-view-scrollview-content {
    padding-bottom 100px
  }
  .book-leading-history-wp {
    z-index 2
  }
  .r-time {
    display inline-block
    min-width 60px
  }
}