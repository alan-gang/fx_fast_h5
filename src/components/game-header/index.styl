@font-face {
  font-family: 'fx-led';
  src: url('~src/assets/font/fx-led.ttf');
}
.game-header-view {
  color: $theme-txt-color;
  background-image: url('~src/assets/images/lotteryCenter/nav-bg@2x.png');
  background-color: $theme-bg-color;
  font-size: 28px;
  padding-bottom: 9px;
  .nums-wp {
    display: flex;
  }
  .open-num-item {
    width: 44px;
    height: 44px;
    line-height: 44px;
    border-radius: 50%;
    background-image: url('~src/assets/images/lotteryCenter/ball_01@2x.png');
    background-size: 100% 100%;
    background-position: center center;
    display: inline-block;
    text-align: center;
    color: $theme-txt-color4;
    margin-right: 8px;
  }
  .last-issue-sec {
    height: 74px;
    padding-left: 22px;
  }
  .cur-issue-sec {
    height: 50px;
    padding: 0 40px 0 22px;
  }
  .time-wp {
    background-color: #0e2e4e;
    font-family: fx-led;
    font-size: 42px;
    padding: 0 11px;
    color: #26eadf;
  }
  .icon-triangle {
    margin-left: 11px;
    display: flex;
  }
  &.k3 {
    dice() {
      display: inline-block;
      width: 60px;
      height: 60px;
      background-size: 60px;
      margin-right: 10px;
      border-radius: 0;
    }
    for num in 1 2 3 4 5 6 {
      .n-{num} {
        background: url('../../assets/images/default/dice-' + num + '@2x.png') center no-repeat;
        dice();
      }
    }
  }
  &.hc6 {
    .nums-wp {
      padding-top: 6px;
      for n in 1 2 3 {
        .bg-{n} {
          .open-num-item {
            background-image: url('~src/assets/images/lotteryCenter/bg-'+n+'@2x.png');
            font-size: 22px;
          }
        }
      }
    }
    .animal {
      font-size: 20px;
      color: #9ccaf0;
      text-align: center;
      padding-right: 6px;
      padding-top: 4px;
    }
    .icon-plus {
      font-size: 40px;
      color: $game-header-icon-plus-color;
      padding: 0 15px 0 0;
    }
    for num in '01' '02' '07' '08' '12' '13' '18' '19' '23' '24' '29' '30' '34' '35' '40' '45' '46' {
      openNum(num, $play-method-name-bd-color-red);
    }
    for num in '03' '04' '09' '10' '14' '15' '20' '25' '26' '31' '36' '37' '41' '42' '47' '48' {
      openNum(num, $play-method-name-bd-color-blue);
    }
    for num in '05' '06' '11' '16' '17' '21' '22' '27' '28' '32' '33' '38' '39' '43' '44' '49' {
      openNum(num, $play-method-name-bd-color-green);
    }
  }
}
