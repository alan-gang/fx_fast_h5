.game-header-view {
  color $theme-txt-color
  background $theme-bg-color
  font-size 28px
  .open-num-item {
    width 44px
    height 44px
    line-height 44px
    border-radius 50%
    background-color $game-header-open-num-item-bg-color
    display inline-block
    text-align center
    color $theme-txt-color4
    margin-right 6px
  }
  .last-issue-sec {
    height 74px
    padding-left 22px
  }
  .cur-issue-sec {
    height 50px
    padding 0 40px 0 22px
    border-bottom solid 1px $theme-bd-color
  }
  .time-wp {
    padding-left 20px
    color $theme-txt-color3
  }
  .icon-triangle {
    margin-left 5px
  }
}
