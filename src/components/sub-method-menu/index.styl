    //   width 1.8rem
    // }
    // &.h60 {
    //   height 0.6rem
    // }
    // &.h40 {
    //   height 0.4rem
    // }
  }
  // .pd-t-12 {
  //   padding-top 0.12rem
  // }
  .odd-pd-l-5 .odd {
    padding-left 0.05rem
  }
  .method-name {
    color $theme-txt-color-5
  }
  .odd {
    color $theme-txt-color1
  }
  .layout-lr {
    display flex
  }
}
