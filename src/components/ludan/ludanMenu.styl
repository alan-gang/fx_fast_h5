.ludan-menu-view {
  border-top solid 1px $ludan-sub-menu-bd-color
  border-left solid 1px $ludan-sub-menu-bd-color
  border-right solid 1px $ludan-sub-menu-bd-color
  background $theme-bg-color
  .menu-wp {
    overflow hidden
  }
  .menu {
    min-width 800px
    height 60px
    margin-top 5px
    padding-bottom 5px
    .menu-item {
      min-width 100px
      height 100%
      line-height 60px
      box-sizing border-box
      padding 0 10px
      float left
      text-align center
    }
    .selected {
      color $ludan-menu-item-selected-color
      position relative
      text-align center
      &::after {
        width 38px
        content ''
        display inline-block
        border-bottom solid 6px $ludan-menu-item-selected-bd-color
        position absolute
        bottom 0
        left calc(50% - 38px / 2)
      }
    }
    &::after {
      content ''
      clear both
      display block
    }
  }
}
